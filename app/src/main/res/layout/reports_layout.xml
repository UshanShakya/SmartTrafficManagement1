<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">


    <TextView
        android:id="@+id/reporter_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name of reporter"/>

    <TextView
        android:layout_below="@+id/reporter_Email"
        android:id="@+id/reporter_Location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location"/>
    <TextView
        android:layout_below="@+id/reporter_Location"
        android:id="@+id/reporter_Report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kind of report"/>



</RelativeLayout>